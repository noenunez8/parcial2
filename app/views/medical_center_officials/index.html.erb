<p id="notice"><%= notice %></p>

<h1>Medical Center Officials</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Medical center type</th>
      <th>Number of appointments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medical_center_officials.each do |medical_center_official| %>
      <tr>
        <td><%= medical_center_official.name %></td>
        <td><%= medical_center_official.description %></td>
        <td><%= medical_center_official.address %></td>
        <td><%= medical_center_official.phone_number %></td>
        <td><%= medical_center_official.medical_center_type_id %></td>
        <th><%= medical_center_official.appointments.count %></th>
        <th><%= medical_center_official.guards.count %></th>
        <td><%= link_to 'Show', medical_center_official %></td>
        <td><%= link_to 'Edit', edit_medical_center_official_path(medical_center_official) %></td>
        <td><%= link_to 'Destroy', medical_center_official, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

